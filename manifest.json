{
  "manifest_version": 2,
  "name": "Awesome Terminal",
  "short_name": "Awesome Terminal",
  "description": "Serial Port communications, send and receive data via serial ports",
  "version": "1.0.18",
  "minimum_chrome_version": "38",
  "chromium-args": "--enable-logging=stderr",

  "permissions": [
    "notifications",
    "serial",
    "clipboardWrite",
    "fileSystem",
    "fileSystem.directory",
    "fileSystem.write",
    "activeTab",
    "tabs"

  ],

  
  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
